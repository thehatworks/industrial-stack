{
  "name": "industrial-stack",
  "version": "0.1.0",
  "author": "Mike <mike@thehatworks.com>",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:rust build:remix",
    "build:rust": "cd rustlib && wasm-pack build --target web",
    "build:remix": "remix build",
    "docker": "docker build . -t industrial-stack:latest",
    "deploy": "deployctl deploy --prod --include=build,public --project=<your deno deploy project> ./build/index.js",
    "dev": "remix build && run-p dev:rust && run-p dev:remix dev:deno",
    "dev:deno": "cross-env NODE_ENV=development deno run --unstable --watch --allow-net --allow-read --allow-env ./build/index.js",
    "dev:rust": "cd rustlib && wasm-pack build --target web",
    "dev:remix": "remix watch",
    "format": "deno fmt --config deno.config.json .",
    "lint": "deno lint --config deno.config.json .",
    "start": "cross-env NODE_ENV=production deno run --unstable --allow-net --allow-read --allow-env ./build/index.js",
    "start:docker": "docker run -it industrial-stack:latest",
    "test:rust": "cd rustlib && cargo test",
    "test:deno": "echo TODO IMPLEMENT test:deno",
    "test": "run-s build:rust test:rust test:deno"
  },
  "dependencies": {
    "@remix-run/deno": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=14"
  }
}
